<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Anderson Pereira dos Santos</Authors>
    <Company>Yazz Tecnologia</Company>
    <Description>EXIF data extractor from photos in formats: JPG, PNG, TIFF</Description>
    <PackageId>ExifPhotoReader</PackageId>
    <RepositoryUrl>https://github.com/andersonpereiradossantos/exif-photo-reader</RepositoryUrl>
    <PackageLicenseUrl>https://github.com/andersonpereiradossantos/exif-photo-reader/blob/main/LICENSE</PackageLicenseUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.0</Version>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <OutputPath>D:\Projetos\NuGet\</OutputPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Drawing.Common" Version="5.0.2" />
  </ItemGroup>

</Project>
